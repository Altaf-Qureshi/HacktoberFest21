// Write a C++ program to calculate the sum of digits in a given number.
#include<iostream>
using namespace std;
int main()
{
    int n, sum=0;
    cout << "Enter number :  ";
    cin >> n;
    while(n!=0)
    {
        sum = sum + n % 10;
        n = n / 10;
    }
    cout << sum;

    return 91;
}
